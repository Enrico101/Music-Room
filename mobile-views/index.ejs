<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  </head>
  <body style="background: #466368; background: linear-gradient(to right, #AA076B,  #61045F); border-radius: 6px; height: 120px;">
    <nav class="navbar navbar-expand-sm" style="background-color: black;">
        <a class="navbar-brand" href="">
            <i style="color: white;" class=" fas fa-compact-disc fa-2x"></i>
        </a>
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <i style="color: white;" class="fas fa-bars"></i>
        </button>
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <br>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="loginLink" onclick="changeColorLogin()" style="font-size: 30px; color: white; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a id="signupLink" onclick="changeColorSignUp()" style="font-size: 30px; color: white; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" class="nav-link" href="/signup">Sign up</a>
                </li>
            </ul>
            <br>
        </div>
    </nav>
    <div style="margin-bottom: 35%">

    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="sm-col-" style="margin: auto;">
                <h2 style="margin-left: 30%; margin-right: 20%; font-weight: bold; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; color: white">Listening is everything</h2>
                <div style="margin-bottom: 10px;">
                </div>
                <p style="margin-left: 40px; margin-right: 30px; font-weight: bold; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; color: white">Millions of songs and podcasts. No credit card needed.</p>
            </div>
        </div>
        <div style="margin-bottom: 15px;">
        </div>
        <div class="row">
            <div class="sm-col-" style="margin: auto">
                <button style="width: 200px; border-radius: 20px; background-color: #cc00cc; border-color: #cc00cc;" type="button" class="btn btn-primary">START LISTENING</button>
            </div>
        </div>
    </div>
    <script>
        function changeColorLogin() {
            document.getElementById("loginLink").style.color = "#AA076B";
        }
        function changeColorSignUp() {
            document.getElementById("signupLink").style.color = "#AA076B";
        }
    </script>
  </body>
</html>