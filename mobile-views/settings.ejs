        .tempCont {
            border: 1px solid black;
            height: 82vh;
            width: 100%;
            /*background: chocolate;*/
            margin: 30px auto;
        }

        .icon {
            color: black;
        }

        .settings {
            text-align: center;
        }
        .settingsView {
            text-align: justify;
            margin-bottom: 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid #D2D2D2;
        }

        .profilePic {
            width: auto;
            height: 100%;
            max-height: 30vh;
        }

